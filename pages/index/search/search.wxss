/* 1搜索 */
page{
  background: #ffffff;
}
.header-box {
  padding-right: 24rpx;
  height: 88rpx;
  background-color: #fff;
}

/* 收索 */

.header {
  display: -webkit-flex;
  justify-content: center;
  position: relative;
  width: 600rpx;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  z-index: 1;
  align-items: center;
  margin-left: 30rpx;
}

.header icon {
  margin: auto 15rpx;
  position: absolute;
  left: 35rpx;
}

.header .search {
  width: 100%;
  color: #888;
  font-size: 26rpx;
  border-radius: 35rpx;
  /* background: #fff;  */
  padding-left: 70rpx;
  background-color: #f7f7f7;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
}

.header-title {
  font-size: 32rpx;
  color: #f703f3;
  width: 120rpx;
  text-align: center;
}

